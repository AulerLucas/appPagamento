<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtFolhaPgto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Folha de  Pagamento"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtNomeFunc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFolhaPgto"
        android:layout_marginTop="20dp"
        android:hint="Nome do funcionário:"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtSalarioBruto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNomeFunc"
        android:layout_marginTop="20dp"
        android:hint="Salário bruto:"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtSalarioBruto"
        android:layout_marginTop="20dp"
        android:textSize="28sp"
        android:paddingLeft="65dp"
        android:textStyle="bold"
        android:text="Sexo"
        android:textColor="@color/white" />


    <RadioGroup
        android:id="@+id/rgroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSexo">

        <RadioButton
            android:id="@+id/rbtMasculino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="15dp" />
        <RadioButton
            android:id="@+id/rbtFeminino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Feminino"
            android:textColor="@color/white"
            android:layout_below="@id/rbtMasculino"
            android:textSize="20sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/edtNumFilhos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgroup"
        android:layout_marginTop="20dp"
        android:hint="Número de filhos:"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtNumFilhos"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"
        android:text="Calcular" />




</RelativeLayout>